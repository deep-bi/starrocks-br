{
  "$schema":  "https://raw.githubusercontent.com/jetify-com/devbox/0.16.0/.schema/devbox.schema.json",
  "packages": ["python311@latest"],
  "shell": {
    "init_hook": [
      ". .devbox/virtenv/python311/bin/venvShellHook.sh",
      "if [ ! -f .venv/.devbox_setup_complete ]; then",
      "  echo 'üê¨ StarRocks Backup & Restore - Installing dependencies...'",
      "  source .venv/bin/activate",
      "  pip install --upgrade pip",
      "  pip install -e .",
      "  pip install -e '.[dev]'",
      "  touch .venv/.devbox_setup_complete",
      "  echo '‚úÖ Environment ready!'",
      "else",
      "  source .venv/bin/activate",
      "fi",
      "echo 'Available commands:'",
      "echo '  starrocks-br --help'",
      "echo '  pytest'"
    ]
  }
}
